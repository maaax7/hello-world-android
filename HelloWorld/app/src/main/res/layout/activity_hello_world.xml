<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".hello_world">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtResult"
        android:textSize="25sp"
        android:textColor="#FF0000" />

    <Button
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:textColor="#ffffff"
        android:background="@drawable/frgradiente"
        android:elevation="6dp"
        android:stateListAnimator="@null"
        android:textSize="16dp"
        android:text="@string/btnMais"
        android:id="@+id/btnMais"
        android:layout_below="@+id/txtResult"
        android:layout_alignParentStart="true"
        android:layout_marginTop="67dp"
        android:onClick="executa" />

    <Button
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:textColor="#ffffff"
        android:background="@drawable/frborda"
        android:elevation="6dp"
        android:stateListAnimator="@null"
        android:textSize="16dp"
        android:text="@string/btnMenos"
        android:id="@+id/btnMenos"
        android:layout_alignTop="@+id/btnMais"
        android:layout_alignParentEnd="true"
        android:onClick="executa" />

    <Button
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:textColor="#ffffff"
        android:background="@drawable/frsolido"
        android:elevation="6dp"
        android:stateListAnimator="@null"
        android:textSize="16dp"
        android:text="@string/btnZerar"
        android:id="@+id/btnZerar"
        android:layout_below="@+id/btnMais"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:onClick="executa" />

</RelativeLayout>
